[flake8]
max-line-length = 120
ignore = 
    E501,  # Line too long (handled by max-line-length)
    W503,  # Line break before binary operator
    E203,  # Whitespace before ':'
    F401,  # Module imported but unused (common in __init__.py)
exclude = 
    __pycache__,
    .git,
    .pytest_cache,
    *.egg-info,
    build,
    dist,
    venv,
    env
per-file-ignores =
    __init__.py:F401,F403
    */test_*.py:F401,F403